<h1>Listing Subjects</h1>
<%= link_to 'New subject', new_subject_path %>
 
<table>
  <tr>
    <th>Name</th>
    <th>Teacher_id</th>
    <th>Student_id</th>
    <th><th colspan="3"></th></th>
  </tr>
 
 <% @subjects.each do |subject| %>
    <tr>
      <td><%= subject.name %></td>
      <td><%= subject.teacher_id %></td>
      <td><%= subject.student_id %></td>
      <td><%= link_to 'Show', subject_path(subject) %></td>
      <td><%= link_to 'Edit', edit_subject_path(subject) %></td>
      <td><%= link_to 'Destroy', subject_path(subject),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>