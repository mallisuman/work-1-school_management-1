<%= link_to 'New student', new_student_path %>

<table>
  <tr>
    <th>Student Name</th>
  </tr>

  <% @student.each do |teacher| %>
    <tr>
      <td><%= teacher.name %></td>
      <td><%= link_to 'Show', teacher_path(teacher) %></td>
      <td><%= link_to 'Edit', edit_teacher_path(teacher) %></td>
      <td><%= link_to 'Destroy', teacher_path(teacher),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>  
</table>

