<h1>Listing Teachers</h1>
<%= link_to 'New teacher', new_teacher_path %>
 
<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Address</th>
    <th>Mobile_Number</th>
    <th>Subject_id</th>
    <th><th colspan="3"></th></th>
  </tr>
 
  <% @teachers.each do |teacher| %>
    <tr>
      <td><%= teacher.name %></td>
      <td><%= teacher.email %></td>
      <td><%= teacher.address %></td>
      <td><%= teacher.mobile_number %></td>
      <td><%= teacher.subject&.name %></td>
      <td><%= link_to 'Show', teacher_path(teacher) %></td>
      <td><%= link_to 'Edit', edit_teacher_path(teacher) %></td>
      <td><%= link_to 'Destroy', teacher_path(teacher),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>