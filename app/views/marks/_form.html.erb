<%= form_with model: @mark, local: true do |form| %>
 
  <% if @mark.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@mark.errors.count, "error") %> prohibited
        this mark from being saved:
      </h2>
      <ul>
        <% @mark.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label :Number %><br>
    <%= form.text_field :number %>
  </p>
 
  <p>
    <%= form.label :Subject_id %><br>
    <%= form.collection_select :subject_id, Subject.all, :id, :name %>
  </p>

  <p>
    <%= form.label :Student_id %><br>
    <%= form.collection_select :student_id, Student.all, :id, :name %>
  </p>

  <p>
    <%= form.submit %>
  </p>
 
<% end %>