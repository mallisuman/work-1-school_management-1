<h1>Listing marks</h1>
<%= link_to 'New mark', new_mark_path %>
 
<table>
  <tr>
    <th>Number</th>
    <th>Subject_id</th>
    <th>Student_id</th>
    <th><th colspan="3"></th></th>
  </tr>
 
 <% @marks.each do |mark| %>
    <tr>
      <td><%= mark.number %></td>
      <td><%= mark.subject_id %></td>
      <td><%= mark.student_id %></td>
      <td><%= link_to 'Show', mark_path(mark) %></td>
      <td><%= link_to 'Edit', edit_mark_path(mark) %></td>
      <td><%= link_to 'Destroy', mark_path(mark),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>